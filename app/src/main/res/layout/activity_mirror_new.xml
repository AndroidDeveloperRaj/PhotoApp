                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1.0dip">

                <Button
                    android:id="@+id/button_3d_1"
                    style="@style/mirror_button_style"
                    android:drawableTop="@drawable/mirror_3d_14_icon_left"
                    android:text="3D-1" />

                <Button
                    android:id="@+id/button_3d_2"
