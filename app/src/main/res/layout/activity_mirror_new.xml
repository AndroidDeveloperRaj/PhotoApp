                <Button
                    android:id="@+id/button_3d_14"
                    style="@style/mirror_button_style"
                    android:drawableTop="@drawable/mirror_3d_6_icon_left"
                    android:text="3D-14" />

                <Button
                    android:id="@+id/button_3d_15"
                    style="@style/mirror_button_style"
                    android:drawableTop="@drawable/mirror_3d_13_icon"
                    android:text="3D-15" />

                <Button
                    android:id="@+id/button_3d_16"
                    style="@style/mirror_button_style"
                    android:drawableTop="@drawable/mirror_3d_13_icon_right"
                    android:text="3D-16" />

                <Button
                    android:id="@+id/button_3d_17"
