                    android:text="3D-8" />

                <Button
                    android:id="@+id/button_3d_9"
                    style="@style/mirror_button_style"
                    android:drawableTop="@drawable/mirror_3d_3_icon_left"
                    android:text="3D-9" />

                <Button
                    android:id="@+id/button_3d_10"
                    style="@style/mirror_button_style"
                    android:drawableTop="@drawable/mirror_3d_3_icon_right"
                    android:text="3D-10" />

                <Button
                    android:id="@+id/button_3d_11"
                    style="@style/mirror_button_style"
                    android:drawableTop="@drawable/mirror_3d_1_icon_left"
                    android:text="3D-11" />

                <Button
                    android:id="@+id/button_3d_12"
                    style="@style/mirror_button_style"
