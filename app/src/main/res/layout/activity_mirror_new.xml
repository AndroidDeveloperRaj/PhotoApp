                    android:text="3D-23" />

                <Button
                    android:id="@+id/button_3d_24"
                    style="@style/mirror_button_style"
                    android:drawableTop="@drawable/mirror_3d_16_icon"
                    android:text="3D-24" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/mirror_ratios"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:background="@color/primary"
            android:orientation="horizontal"
            android:padding="3.0dip"
            android:paddingRight="5.0dip">

            <HorizontalScrollView
                android:id="@+id/mirror_ratio_horizontalScrollView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:padding="1.0dip"
                android:paddingRight="0.0dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1.0dip">

                    <Button
                        android:id="@+id/button11"
                        style="@style/mirror_ratio_button_style"
                        android:background="@drawable/ratio_bg_pressed"
                        android:text="1:1" />

                    <Button
                        android:id="@+id/button21"
                        style="@style/mirror_ratio_button_style"
                        android:text="2:1" />

                    <Button
                        android:id="@+id/button12"
                        style="@style/mirror_ratio_button_style"
                        android:text="1:2" />

                    <Button
                        android:id="@+id/button32"
                        style="@style/mirror_ratio_button_style"
                        android:text="3:2" />

                    <Button
                        android:id="@+id/button23"
                        style="@style/mirror_ratio_button_style"
                        android:text="2:3" />

                    <Button
                        android:id="@+id/button43"
                        style="@style/mirror_ratio_button_style"
                        android:text="4:3" />

                    <Button
                        android:id="@+id/button34"
                        style="@style/mirror_ratio_button_style"
                        android:text="3:4" />

                    <Button
                        android:id="@+id/button45"
                        style="@style/mirror_ratio_button_style"
