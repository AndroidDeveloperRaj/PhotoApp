                        android:drawableTop="@drawable/m7"
                        android:text="M-7" />

                    <Button
                        android:id="@+id/button_m8"
                        style="@style/mirror_button_style"
                        android:drawableTop="@drawable/m8"
                        android:text="M-8" />

                    <Button
                        android:id="@+id/button_m9"
                        style="@style/mirror_button_style"
                        android:drawableTop="@drawable/m9"
                        android:text="M-9" />

                    <Button
                        android:id="@+id/button_m10"
                        style="@style/mirror_button_style"
                        android:drawableTop="@drawable/m10"
                        android:text="M-10" />

                    <Button
                        android:id="@+id/button_m11"
                        style="@style/mirror_button_style"
                        android:drawableTop="@drawable/m11"
                        android:text="M-11" />

                    <Button
                        android:id="@+id/button_m12"
                        style="@style/mirror_button_style"
                        android:drawableTop="@drawable/m12"
                        android:text="M-12" />

                    <Button
                        android:id="@+id/button_m13"
