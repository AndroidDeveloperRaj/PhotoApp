<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:padding="@dimen/padding_normal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/gallery_footer_image_size"
        android:layout_height="@dimen/gallery_footer_image_size"
        android:scaleType="centerCrop"
        android:src="@drawable/mirror" />

    <ImageView
        android:id="@+id/imageView_delete"
        android:layout_width="@dimen/gallery_footer_delete_image_size"
        android:layout_height="@dimen/gallery_footer_delete_image_size"
        android:clickable="true"
        android:onClick="myClickHandler"
        android:scaleType="centerCrop"
        android:src="@drawable/close" />
</RelativeLayout>