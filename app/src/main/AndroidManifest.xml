<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.paddycameraeditior" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.app.paddycameraeditior.AppController"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.app.paddycameraeditior.activities.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.activities.PhotoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.activities.CropActivity"
            android:label="@string/title_activity_crop"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.activities.SaveImageActivity"
            android:label="@string/title_activity_save_image"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.activities.BlurActivity"
            android:label="@string/title_activity_blur"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.activities.TextViewActivity"
            android:label="@string/title_activity_text_view"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.multitouchview.PhotoSortrActivityStrip"
            android:label="@string/title_activity_text_view"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.activities.StickerActivity"
            android:label="@string/title_activity_stricker"
            android:screenOrientation="portrait">
        </activity>

        <!-- <meta-data -->
        <!-- android:name="io.fabric.ApiKey" -->
        <!-- android:value="739d74db64e52dd95e3ee8d463daac8d8169c16c" /> -->

        <activity
            android:name="com.app.paddycameraeditior.activities.SquareActivity"
            android:label="@string/title_activity_square"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.app.paddycameraeditior.collagelib.CollageActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.app.paddycameraeditior.mirror.MirrorActivity"
            android:label="@string/title_activity_mirror_new"
            android:screenOrientation="portrait">
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="739d74db64e52dd95e3ee8d463daac8d8169c16c" />
    </application>

</manifest>
